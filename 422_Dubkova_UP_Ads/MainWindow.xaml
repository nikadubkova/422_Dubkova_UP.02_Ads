<Window x:Class="_422_Dubkova_UP_Ads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_422_Dubkova_UP_Ads"
        mc:Ignorable="d"
        Title="Сервис частных объявлений"
        Height="720"
        Width="1100"
        Background="{StaticResource BackgroundBrush}">

    <DockPanel LastChildFill="True" Margin="16">

        <!-- Header -->
        <DockPanel DockPanel.Dock="Top"
                   Style="{StaticResource PageHeaderStyle}">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="16,0">
                <Image Source="Images/Лого.png"
                       Width="48"
                       Height="48"
                       Margin="0,0,12,0" />

                <StackPanel>
                    <TextBlock Text="Сервис частных объявлений"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryTextBrush}" />
                    <TextBlock Text="Объявления – покупка, продажа, аренда, услуги"
                               FontSize="12"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                </StackPanel>
            </StackPanel>
        </DockPanel>

        <!-- Frame для навигации -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource BackgroundBrush}" />

    </DockPanel>
</Window>
