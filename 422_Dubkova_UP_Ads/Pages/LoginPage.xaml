<Page x:Class="_422_Dubkova_UP_Ads.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova_UP_Ads.Pages"
      mc:Ignorable="d" 
      Background="{StaticResource BackgroundBrush}"
      Title="Авторизация">

    <Grid Margin="40">
        <Border Background="White"
                BorderBrush="{StaticResource ControlBorderBrush}"
                BorderThickness="1"
                Padding="32"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Width="360">

                <TextBlock Text="Авторизация"
                           Style="{StaticResource HeaderTextStyle}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>

                <TextBlock Text="Логин" 
                           Margin="0,0,0,4"
                           Style="{StaticResource BaseTextFont}"/>

                <TextBox x:Name="txtLogin" Height="37"/>

                <TextBlock Text="Пароль"
                           Margin="0,12,0,4"
                           Style="{StaticResource BaseTextFont}"/>

                <PasswordBox x:Name="txtPassword" Height="37"/>

                <Button Content="Войти"
                        Margin="0,24,0,0"
                        HorizontalAlignment="Center"
                        Click="LoginButton_Click" Width="120"/>

                <!-- Ошибка -->
                <Border x:Name="errorBorder"
                        Margin="0,16,0,0"
                        Background="#FFF7F7"
                        BorderBrush="#F4C7C3"
                        BorderThickness="1"
                        Padding="10"
                        CornerRadius="6"
                        Visibility="Collapsed">
                    <TextBlock x:Name="lblError"
                               Foreground="#D83B01"
                               FontSize="12"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

        </Border>
    </Grid>
</Page>
