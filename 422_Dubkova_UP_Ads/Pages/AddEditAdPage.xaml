<Page x:Class="_422_Dubkova_UP_Ads.Pages.AddEditAdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova_UP_Ads.Pages"
      mc:Ignorable="d" 
      Title="Редактирование объявления"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER – стиль ребят, НО цвет твоего акцента -->
        <Border Grid.Row="0"
                Background="{StaticResource AccentBrush}"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка назад -->
                <Button Content="← Назад"
                        Click="BackButton_Click"
                        Background="White"
                        FontSize="14"
                        Foreground="{StaticResource PrimaryTextBrush}"
                        BorderBrush="White"
                        BorderThickness="1"
                        Padding="12,6"
                        Cursor="Hand" />

                <!-- Заголовок -->
                <TextBlock x:Name="lblTitle"
                           Grid.Column="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Text="Редактирование объявления"
                           Foreground="White"/>
            </Grid>
        </Border>

        <!-- ScrollViewer (замените существующий) -->
        <ScrollViewer Grid.Row="1"
              VerticalScrollBarVisibility="Auto"
              Padding="12" 
              HorizontalContentAlignment="Stretch">
            

            <!-- Grid с формой; IsSharedSizeScope и SharedSizeGroup гарантируют ровные колонки -->
            <Grid Margin="0" IsSharedSizeScope="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170" SharedSizeGroup="LabelCol"/>
                    <!-- ширина меток -->
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="24" />
                    <!-- для звездочек '*' -->
                </Grid.ColumnDefinitions>

                <!-- строки формы -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- изображение -->
                    <RowDefinition Height="12"/>
                    <!-- небольшой отступ -->
                    <RowDefinition Height="Auto"/>
                    <!-- заголовок -->
                    <RowDefinition Height="Auto"/>
                    <!-- описание -->
                    <RowDefinition Height="Auto"/>
                    <!-- дата -->
                    <RowDefinition Height="Auto"/>
                    <!-- город -->
                    <RowDefinition Height="Auto"/>
                    <!-- категория -->
                    <RowDefinition Height="Auto"/>
                    <!-- тип -->
                    <RowDefinition Height="Auto"/>
                    <!-- статус -->
                    <RowDefinition Height="Auto"/>
                    <!-- цена -->
                    <RowDefinition Height="Auto"/>
                    <!-- прибыль панель -->
                    <RowDefinition Height="Auto"/>
                    <!-- ошибка -->
                    <RowDefinition Height="24"/>
                    <!-- нижний отступ -->
                </Grid.RowDefinitions>

                <!-- ================ IMAGE BLOCK ================ -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Изображение:"
                   VerticalAlignment="Top"
                   Margin="0,4,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <Border Grid.Row="0" Grid.Column="1"
                Background="#F8F9FA"
                BorderBrush="{StaticResource ControlBorderBrush}"
                BorderThickness="1"
                Padding="12"
                CornerRadius="6">
                    <StackPanel>
                        <Border BorderBrush="#CED4DA" BorderThickness="1" Background="White" CornerRadius="4" HorizontalAlignment="Left">
                            <Image x:Name="imgPreview" Width="220" Height="160" Stretch="Uniform" Source="/Images/заглушка.jpg"/>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="Выбрать фото" Click="SelectImageButton_Click" Width="150" Height="36" />
                            <Button Content="Удалить" Click="RemoveImageButton_Click" Background="#D13438" Foreground="White" BorderThickness="0" Height="36" />
                        </StackPanel>

                        <TextBlock x:Name="lblImageInfo" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ================ TITLE ================ -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Заголовок:"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <TextBox Grid.Row="2" Grid.Column="1"
                 x:Name="txtTitle"
                 Height="36"
                 VerticalAlignment="Center"
                 Margin="0,6,0,6"/>

                <TextBlock Grid.Row="2" Grid.Column="2"
                   Text="*"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

                <!-- ================ DESCRIPTION ================ -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Описание:"
                   VerticalAlignment="Top"
                   Margin="0,6,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <TextBox Grid.Row="3" Grid.Column="1"
                 x:Name="txtDescription"
                 Height="120"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,6,0,6"/>

                <!-- ================ DATE ================ -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Дата публикации:"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <DatePicker Grid.Row="4" Grid.Column="1"
                    x:Name="dpDate"
                    Height="34"
                    VerticalAlignment="Center"
                    Margin="0,6,0,6"/>

                <TextBlock Grid.Row="4" Grid.Column="2"
                   Text="*"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

                <!-- ================ CITY ================ -->
                <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Город:"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <ComboBox Grid.Row="5" Grid.Column="1"
                  x:Name="cmbCity"
                  Height="34"
                  VerticalAlignment="Center"
                  Margin="0,6,0,6"
                  DisplayMemberPath="city1"/>

                <TextBlock Grid.Row="5" Grid.Column="2"
                   Text="*"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

                <!-- ================ CATEGORY ================ -->
                <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Категория:"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <ComboBox Grid.Row="6" Grid.Column="1"
                  x:Name="cmbCategory"
                  Height="34"
                  VerticalAlignment="Center"
                  Margin="0,6,0,6"
                  DisplayMemberPath="name"/>

                <TextBlock Grid.Row="6" Grid.Column="2"
                   Text="*"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

                <!-- ================ TYPE ================ -->
                <TextBlock Grid.Row="7" Grid.Column="0"
                   Text="Тип:"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <ComboBox Grid.Row="7" Grid.Column="1"
                  x:Name="cmbType"
                  Height="34"
                  VerticalAlignment="Center"
                  Margin="0,6,0,6"
                  DisplayMemberPath="type1"/>

                <TextBlock Grid.Row="7" Grid.Column="2"
                   Text="*"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

                <!-- ================ STATUS ================ -->
                <TextBlock Grid.Row="8" Grid.Column="0"
                   Text="Статус:"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <ComboBox Grid.Row="8" Grid.Column="1"
                  x:Name="cmbStatus"
                  Height="34"
                  VerticalAlignment="Center"
                  Margin="0,6,0,6"
                  DisplayMemberPath="status1"
                  SelectionChanged="cmbStatus_SelectionChanged"/>

                <TextBlock Grid.Row="8" Grid.Column="2"
                   Text="*"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

                <!-- ================ PRICE ================ -->
                <TextBlock Grid.Row="9" Grid.Column="0"
                   Text="Цена:"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

                <TextBox Grid.Row="9" Grid.Column="1"
                 x:Name="txtPrice"
                 Height="36"
                 VerticalAlignment="Center"
                 Margin="0,6,0,6"
                 PreviewTextInput="txtPrice_PreviewTextInput"/>

                <TextBlock Grid.Row="9" Grid.Column="2"
                   Text="*"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

                <!-- ================ PROFIT PANEL ================ -->
                <Border x:Name="profitPanel" Grid.Row="9" Grid.Column="1" 
       Background="#F0F8F0" BorderBrush="#C0E0C0" BorderThickness="1"
       Padding="15" Margin="0,0,0,15" CornerRadius="4" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="💰 Ввод полученной суммы" FontWeight="SemiBold" 
                  Margin="0,0,0,8" Foreground="#2D5C2D"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Полученная сумма:" FontSize="12" 
                      VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="txtProfit" Width="120" Height="25" 
                    FontSize="12" Padding="5"
                    BorderBrush="#90C090" BorderThickness="1"
                    ToolTip="Введите целое неотрицательное число"
                    PreviewTextInput="txtProfit_PreviewTextInput"/>
                            <TextBlock Text="руб." FontSize="12" Margin="10,0,0,0" 
                      VerticalAlignment="Center" Foreground="#666666"/>
                        </StackPanel>
                        <TextBlock Text="Эта сумма будет добавлена в Вашу общую прибыль" 
                  FontSize="10" Foreground="#666666" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <!--<Border Grid.Row="10" Grid.Column="1"
                x:Name="profitPanel"
                Background="#F0F8F0"
                BorderBrush="#C0E0C0"
                BorderThickness="1"
                Padding="12"
                CornerRadius="4"
                Visibility="Collapsed"
                Margin="0,6,0,6">
                    <StackPanel>
                        <TextBlock Text="💰 Ввод полученной суммы" FontWeight="SemiBold" Foreground="#2D5C2D" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Полученная сумма:" VerticalAlignment="Center" FontSize="12" Height="36"/>
                            <TextBox x:Name="txtProfit" Width="140" Height="28" Margin="10,0,0,0" PreviewTextInput="txtProfit_PreviewTextInput"/>
                            <TextBlock Text="руб." Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Эта сумма будет добавлена в вашу общую прибыль" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>-->

                <!-- ================ ERROR BLOCK ================ -->
                <Border Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="3"
                x:Name="errorBorder"
                Background="#FEF7F7"
                BorderBrush="#F4C7C3"
                BorderThickness="1"
                Padding="12"
                CornerRadius="4"
                Visibility="Collapsed"
                Margin="0,6,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠" FontSize="14" Margin="0,0,10,0" Foreground="#D83B01"/>
                        <TextBlock x:Name="lblError" Foreground="#D83B01" FontSize="12" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- ACTION BUTTONS -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <!-- SAVE: твой оранжевый стиль -->
                <Button x:Name="btnSave"
                        Content="Сохранить"
                        Margin="20,0,0,0"
                        Click="SaveButton_Click"/>

                <!-- CANCEL: серая -->
                <Button Content="Отмена"
                        Click="CancelButton_Click"
                        Background="{StaticResource SecondaryTextBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
