<Page x:Class="_422_Dubkova_UP_Ads.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova_UP_Ads.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добро пожаловать"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="520" Margin="16">
            <Image Source="/Images/Лого.png" Width="120" Height="120" HorizontalAlignment="Center" Margin="0,0,0,18"/>
            <TextBlock Text="Добро пожаловать" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" />
            <TextBlock Text="Найдите, продайте или сдайте в аренду быстро и безопасно" FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center" Margin="0,6,0,22"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="BtnLogin" Content="Авторизоваться" Width="180" Click="BtnLogin_Click" />
                <Button x:Name="BtnGuest" Content="Войти как гость" Width="180" Click="BtnGuest_Click" Background="{StaticResource SecondaryTextBrush}"/>
            </StackPanel>
        </StackPanel>

        <!-- Нижняя подпись -->
        <TextBlock Grid.Row="1" Text="© 2025 – Сервис частных объявлений" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Right" Margin="0,0,16,10"/>
    </Grid>
</Page>
