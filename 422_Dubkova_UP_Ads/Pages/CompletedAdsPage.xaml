<Page x:Class="_422_Dubkova_UP_Ads.Pages.CompletedAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova_UP_Ads.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Завершенные объявления">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- ================= HEADER ================= -->
        <Border Grid.Row="0"
                Background="{StaticResource AccentBrush}"
                Padding="15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back -->
                <Button Content="← Назад"
        Click="BackButton_Click"
        Background="White"
        FontSize="14"
        Foreground="{StaticResource PrimaryTextBrush}"
        BorderBrush="White"
        BorderThickness="1"
        Padding="12,6"
        Cursor="Hand" />

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="Завершенные объявления"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Total profit -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="💰"
                               FontSize="16"
                               Foreground="White"
                               Margin="0,0,8,0"/>

                    <TextBlock x:Name="lblTotalProfit"
                               Text="Общая прибыль: 0₽"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>



        <!-- ============= TOP ACTION BAR ============= -->
        <Border Grid.Row="1"
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="15,10">

            <StackPanel Orientation="Horizontal">

                <!-- Refresh – neutral grey button -->
                <Button Content="🔄 Обновить"
                        Click="RefreshButton_Click"
                        Background="{StaticResource SecondaryTextBrush}"
                        Foreground="White"
                        FontSize="14"
                        Margin="10,0,0,0"
                        FontWeight="SemiBold"
                        Padding="12,6"
                        BorderThickness="0"/>

                <!-- Manage ads – accent orange button -->
                <Button Content="📊 Управление объявлениями"
                        Click="ManageAdsButton_Click"
                        Background="{StaticResource AccentBrush}"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="12,6"
                        Margin="10,0,0,0"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>



        <!-- =============== CONTENT SCROLL =============== -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Margin="15">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <!-- Loading panel -->
                <Border x:Name="loadingPanel"
                       Grid.Row="0"
                       Background="#FFF4CE"
                       BorderBrush="#FFD965"
                       BorderThickness="1"
                       Padding="10"
                       CornerRadius="4"
                       Margin="0,0,0,10"
                       Visibility="Collapsed">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏳"
                                   FontSize="14"
                                   Margin="0,0,8,0"/>

                        <TextBlock x:Name="lblLoading"
                                   Text="Загрузка данных..."
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>


                <!-- Items -->
                <ItemsControl x:Name="itemsCompletedAds"
                              Grid.Row="1">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <!-- AD CARD -->
                            <Border Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="8"
                                    Width="320"
                                    Height="420"
                                    Padding="0">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="180"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>


                                    <!-- Image -->
                                    <Border Grid.Row="0"
                                            Background="#F5F5F5"
                                            CornerRadius="8,8,0,0">

                                        <Image Stretch="UniformToFill">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source"
                                                            Value="/Images/заглушка.jpg"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasImage}" Value="True">
                                                            <Setter Property="Source"
                                                                    Value="{Binding ImageSource}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Border>


                                    <!-- Title -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding ad_title}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Margin="12,10,12,5"
                                               TextWrapping="Wrap"
                                               MaxHeight="40"
                                               TextTrimming="CharacterEllipsis"/>


                                    <!-- Description -->
                                    <ScrollViewer Grid.Row="2"
                                                  VerticalScrollBarVisibility="Auto"
                                                  Margin="12,0,12,5">
                                        <TextBlock Text="{Binding ad_description}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource SecondaryTextBrush}"
                                                   TextWrapping="Wrap"
                                                   MaxHeight="60"/>
                                    </ScrollViewer>


                                    <!-- Details -->
                                    <Border Grid.Row="3"
                                           Background="#F9F9F9"
                                           Padding="12,8"
                                           Margin="0,5,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding City.city1}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding AdType.type1}"
                                                           FontSize="10"
                                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                                                <TextBlock Text="{Binding Category.name}"
                                                           FontSize="10"
                                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1"
                                                        HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding price, StringFormat={}{0}₽}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource AccentBrush}"/>
                                                <TextBlock Text="{Binding ad_post_date, StringFormat=dd.MM.yyyy}"
                                                           FontSize="9"
                                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>


                                    <!-- Profit -->
                                    <Border Grid.Row="4"
                                           Background="#E8F5E8"
                                           Padding="8,5">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="💰"
                                                       Margin="0,0,5,0"/>

                                            <TextBlock Text="Полученная прибыль:"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"/>

                                            <TextBlock Text="{Binding ProfitAmount, StringFormat={}{0}₽}"
                                                       Foreground="{StaticResource SuccessBrush}"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </Border>


                                    <!-- Status -->
                                    <Border Grid.Row="5"
                                           Background="{StaticResource SuccessBrush}"
                                           Padding="5,2"
                                           CornerRadius="0,0,8,8">
                                        <TextBlock Text="{Binding AdStatus.status1}"
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   HorizontalAlignment="Center"/>
                                    </Border>

                                </Grid>
                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>



                <!-- Empty state -->
                <Border x:Name="emptyStatePanel"
                       Grid.Row="1"
                       Background="#F9F9F9"
                       Visibility="Collapsed"
                       Padding="30"
                       CornerRadius="8"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="✅"
                                   FontSize="48"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="У вас пока нет завершенных объявлений"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Завершенные объявления появятся здесь после завершения сделок"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

            </Grid>

        </ScrollViewer>



        <!-- =============== STATUS BAR =============== -->
        <StatusBar Grid.Row="3"
                   Background="#F5F5F5"
                   BorderBrush="#E0E0E0"
                   BorderThickness="0,1,0,0">

            <StatusBarItem>
                <TextBlock x:Name="lblStatus"
                           Text="Готово"
                           FontSize="11"/>
            </StatusBarItem>

            <Separator/>

            <StatusBarItem>
                <TextBlock x:Name="lblCount"
                           Text="Завершенных объявлений: 0"
                           FontSize="11"
                           Foreground="{StaticResource SecondaryTextBrush}"/>
            </StatusBarItem>

            <Separator/>

            <StatusBarItem>
                <TextBlock x:Name="lblProfitInfo"
                           Text="Общая прибыль: 0₽"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource SuccessBrush}"/>
            </StatusBarItem>

        </StatusBar>

    </Grid>
</Page>
