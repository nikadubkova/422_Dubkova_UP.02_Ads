<Page x:Class="_422_Dubkova_UP_Ads.Pages.AdsManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Dubkova_UP_Ads.Pages"
      mc:Ignorable="d" 
      Background="{StaticResource BackgroundBrush}"
      Title="Управление объявлениями">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: цвет - AccentBrush (из Styles.xaml), текст белый -->
        <Border Grid.Row="0" Background="{StaticResource AccentBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="← Назад"
                        Click="BackButton_Click"
                        Background="White"
                        Foreground="{StaticResource PrimaryTextBrush}"
                        BorderBrush="White"
                        BorderThickness="1"
                        Padding="10,5"
                        Cursor="Hand"
                        FontSize="14"/>

                <TextBlock Grid.Column="1"
                           Text="Управление объявлениями"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="lblUserInfo"
                               Foreground="White"
                               FontSize="12"
                               Margin="0,0,15,0"
                               VerticalAlignment="Center"/>

                    <Button Content="Выйти"
                     Click="LogoutButton_Click"
                     Background="Transparent"
                     Foreground="White"
                     BorderBrush="White"
                     BorderThickness="1"
                     Padding="10,5"
                     Cursor="Hand"
                     FontSize="14">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="6"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    Background="{TemplateBinding Background}"
                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                    </Trigger>

                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>

                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons panel -->
        <Border Grid.Row="1"
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource ControlBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <!-- Default button style (global) will use AccentBrush -->
                <Button Content="➕ Добавить объявление" Click="AddButton_Click" Margin="10,0,0,0"/>

                <Button Content="🌐 Все объявления" Click="AllAdsButton_Click"
                 Margin="10,0,0,0"
                 Style="{StaticResource SecondaryButtonStyle}" />

                <Button Content="🔄 Обновить список" Click="RefreshButton_Click"
                 Margin="10,0,0,0"
                 Background="{StaticResource SecondaryTextBrush}"
                 Foreground="White"/>

                <!-- Exception: зелёная кнопка Завершенные -->
                <Button Content="✅ Завершенные"
                        Click="CompletedAdsButton_Click"
                        Margin="10,0,0,0"
                        Background="#28A745"
                        Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Main content: list -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- loading panel (no hard-coded colors) -->
                <Border x:Name="loadingPanel"
                        Grid.Row="0"
                        Visibility="Collapsed"
                        Padding="10"
                        CornerRadius="4"
                        BorderBrush="{StaticResource ControlBorderBrush}"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏳" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock x:Name="lblLoading" Text="Загрузка данных..." FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Items -->
                <ItemsControl Grid.Row="1" x:Name="itemsAds">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource BackgroundBrush}"
                                    BorderBrush="{StaticResource ControlBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="8"
                                    Width="300" Height="420">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="180"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Image area -->
                                    <Border Grid.Row="0" Background="{StaticResource BackgroundBrush}" CornerRadius="8,8,0,0">
                                        <Image Stretch="UniformToFill">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="/Images/заглушка.jpg"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasImage}" Value="True">
                                                            <Setter Property="Source" Value="{Binding ImageSource}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Border>

                                    <!-- title -->
                                    <TextBlock Grid.Row="1" Text="{Binding ad_title}" FontWeight="Bold" FontSize="14"
                                               Margin="12,10,12,5" TextWrapping="Wrap" MaxHeight="40" TextTrimming="CharacterEllipsis"
                                               Foreground="{StaticResource PrimaryTextBrush}"/>

                                    <!-- description -->
                                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="12,0,12,5">
                                        <TextBlock Text="{Binding ad_description}" FontSize="12" TextWrapping="Wrap"
                                                   Foreground="{StaticResource SecondaryTextBrush}" MaxHeight="60"/>
                                    </ScrollViewer>

                                    <!-- info -->
                                    <Border Grid.Row="3" Background="{StaticResource BackgroundBrush}" Margin="0,5,0,0" Padding="12,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding City.city1}" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                                                <TextBlock Text="{Binding AdType.type1}" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                                <TextBlock Text="{Binding Category.name}" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding price, StringFormat={}{0}₽}" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                                <TextBlock Text="{Binding ad_post_date, StringFormat=dd.MM.yyyy}" FontSize="9" Foreground="{StaticResource SecondaryTextBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- status strip: brush comes from code (SuccessBrush or SecondaryTextBrush) -->
                                    <Border Grid.Row="4" Background="{Binding StatusColor}" Padding="5,2">
                                        <TextBlock Text="{Binding AdStatus.status1}" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- card actions -->
                                    <Border Grid.Row="5" Background="{StaticResource BackgroundBrush}" CornerRadius="0,0,8,8" Padding="8">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!-- Edit uses default button style (AccentBrush via global style) -->
                                            <Button Content="✏️ Редактировать" Tag="{Binding id}" Click="EditCardButton_Click" Padding="8,4" Margin="0,0,5,0"/>
                                            <!-- Delete - exception: red -->
                                            <Button Content="Удалить" Tag="{Binding id}" Click="DeleteCardButton_Click"
                                                    Background="#D13438" Foreground="White" Padding="8,4" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- empty state -->
                <Border x:Name="emptyStatePanel" Grid.Row="1" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30" CornerRadius="8" BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="1">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="📝" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="У вас пока нет объявлений" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock Text="Создайте свое первое объявление, нажав на кнопку ниже" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <Button Content="➕ Создать первое объявление" Click="AddButton_Click" Padding="15,8" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- status bar -->
        <StatusBar Grid.Row="3" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Готово" FontSize="11" Foreground="{StaticResource PrimaryTextBrush}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="lblCount" Text="Объявлений: 0" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
